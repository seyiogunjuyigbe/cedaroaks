<% include ../partials/header.ejs %>    
    <div class="container">
        <div class="jumbotron">
            <h1>Requests made to me</h1>
        </div>
        <div>
                <table class="table table-striped table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Requestor</th>
                                <th scope="col">Date Applied</th>
                                <th scope="col">Amount Requested</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Payback Amount</th>
                                <th scope="col">Action</th>
                                <th scope="col">Action</th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            <%User.guarantorRequests.forEach(function(request){ %>
                                <tr>
                                    <td><%=request.requestorUsername%></td> 
                                    <td><%=request.dateApplied%></td> 
                                    <td><%=request.requestAmount%></td>  
                                    <td>
                                        <!-- <%=request.duration%> months -->
                                    </td> 
                                    <td><%=request.requestDueDate%></td>      
                                    <td><span class="badge badge-success">
                                          <% if(request.approvalStatus == true){ %>
                                              Approved By Me </span>
                                          <% } else { %>
                                            <a href="/user/profile/<%=User._id%>/guarantor-requests/<%=request._id%>/approve">Approve</a> 
                                            </span>
                                         <% }%>
                                       
                                    </td>
                                      <td>
                                         <% if(request.approvalStatus !== true){ %>
                                                <span class="badge badge-success">
                                              <a href="/user/profile/<%=User._id%>/guarantor-requests/<%=request._id%>/decline">Decline</a> 
                                        </span> 
                                       <%   } %>
                                       
                                    </td>                
                               </tr>
                          <%  })%>
                        </tbody>
                    </table>
            </div>
    </div>

<% include ../partials/footer.ejs %>